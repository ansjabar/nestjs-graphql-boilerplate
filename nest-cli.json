{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "modules/mail/templates/**/*", "watchAssets": true, "outDir": "./dist/src" },
      { "include": "i18n/**/*", "watchAssets": true, "outDir": "./dist/src" }
    ]
  }
}
